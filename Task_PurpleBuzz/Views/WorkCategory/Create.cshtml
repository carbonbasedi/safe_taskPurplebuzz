@{
	Layout = null;
}

@using Task_PurpleBuzz.ViewModels.WorkCategory
@model WorkCategoryCreateVM

<head>
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <form asp-action="create" asp-controller="workcategory" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter email">
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
            <label asp-for="Desc"></label>
            <textarea asp-for="Desc" type="text" class="form-control" aria-describedby="emailHelp" placeholder="Enter email"></textarea>
            <span asp-validation-for="Desc"></span>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
    <script src="assets/js/bootstrap.bundle.min.js"></script>

</body>